{% extends '::base.html.twig' %}


{% block title %}
    {{ 'app_kdo.index.title'|trans }}
{% endblock title %}

{% block page %}
    <div class="row">
        <div class="medium-12 columns">
            <h1 class="text-center title">Entity</h1>
        </div>
    </div>
    <div class="row">
        <div class="medium-12 columns">
            <table class="width-100 panel">
                <tbody>
                    <tr>
                        <th>Id</th>
                            <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                            <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                            <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>Quantity</th>
                            <td>{{ entity.quantity }}</td>
                    </tr>
                    <tr>
                        <th>Link</th>
                            <td>{{ entity.link }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                            <td>{{ entity.price }}</td>
                    </tr>
                    <tr>
                        <th>Createdat</th>
                            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>

                        <div class="row">
    <div class="small-4 columns text-left">
        <a class="link-return" href="{{ path('app_kdo') }}">
            <i class="icon-arrow-left icon-large vertical"></i>
            {{ 'link.return'|trans }}
        </a>
    </div>
    <div class="small-4 columns text-center">
        <a class="tiny button" href="{{ path('app_kdo_edit', { 'id': entity.id }) }}">
            {{ 'button.update'|trans }}
        </a>
    </div>
    <div class="small-4 columns text-center">
        {{ form(delete_form) }}
    </div>
</div>
        </div>
    </div>
{% endblock %}
