{% extends '::base.html.twig' %}

{% block title %}
    {{ 'app.listkdo.new.title'|trans }}
{% endblock title %}


{% block page %}
    <div class="row">
        <div class="medium-12 columns">
            <h1 class="text-center title">
                {{ 'app.listkdo.new.title'|trans }}
            </h1>
        </div>
    </div>

    <div class="panel">
        {{ form(form) }}
    </div>

    <div class="row">
        <div class="small-4 columns text-left">
            {% if is_granted('ROLE_ADMIN') %}
            <a class="link-return" href="{{ path('appbundle_listkdo') }}">
                <i class="icon-arrow-left icon-large vertical"></i>
                {{ 'link.return'|trans }}
            </a>
            {% else %}
                <a class="link-return" href="{{ path('appbundle_listkdo_list') }}">
                    <i class="icon-arrow-left icon-large vertical"></i>
                    {{ 'link.return'|trans }}
                </a>
            {% endif %}
        </div>
    </div>

{% endblock %}
