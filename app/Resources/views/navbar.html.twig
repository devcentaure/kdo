{% block navbar %}

    <nav class="top-bar" data-topbar role="navigation">
        <ul class="title-area">
            <li class="name">
                <a href="{{ path('app_homepage') }}">
                    {{ 'views.navbar.title'|trans }}
                </a>
            </li>
            <li class="toggle-topbar menu-icon">
                <a href="#">
                    <span>
                        {{ 'views.navbar.menu'|trans }}
                    </span>
                </a>
            </li>
        </ul>
        <section class="top-bar-section">
            <ul class="right">

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="divider"></li>
                    <li class="has-dropdown not-click">
                        <a href="#">
                            <span class="icon-cog icon-large vertical"></span>
                        </a>
                        <ul class="dropdown">
                            <li class="divider"></li>
                            <li>
                                <a href="{{ path('appbundle_listkdo') }}">
                                    {{ 'views.navbar.adminlistkdo'|trans }}
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="{{ path('appbundle_userlistkdo') }}">
                                    {{ 'views.navbar.adminuserlistkdo'|trans }}
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="{{ path('appbundle_kdo') }}">
                                    {{ 'views.navbar.adminkdo'|trans }}
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="{{ path('appbundle_userkdo') }}">
                                    {{ 'views.navbar.adminuserkdo'|trans }}
                                </a>
                            </li>
                        </ul>
                    </li>
                {% endif %}

                <li class="divider"></li>
                <li>
                    <a href="{{ path('appbundle_listkdo_list') }}">
                        {{ 'views.navbar.listkdo'|trans }}
                    </a>
                </li>

                {% if is_granted('ROLE_USER') %}
                {% endif %}
                <li class="divider"></li>
                <li class="has-form">
                    {% if is_granted('ROLE_USER') %}
                        <a class="tiny button" href="{{ path('fos_user_security_logout') }}">
                            {{ 'views.navbar.logout'|trans }}
                        </a>
                    {% else %}
                        <a class="tiny button" href="{{ path('fos_user_security_login') }}">
                            {{ 'views.navbar.login'|trans }}
                        </a>
                    {% endif %}
                </li>
                <li class="divider"></li>
            </ul>
        </section>
    </nav>

{% endblock navbar %}
